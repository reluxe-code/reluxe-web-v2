{
  "root": true,
  "extends": ["next/core-web-vitals", "eslint:recommended"],
  "plugins": ["import"],
  "rules": {
    "import/no-unresolved": ["error", { "caseSensitive": true }]
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [["@", "./src"]],
        "extensions": [".js", ".jsx", ".ts", ".tsx", ".json"]
      },
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx", ".json"]
      }
    }
  }
}
